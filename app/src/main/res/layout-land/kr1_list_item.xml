<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/kr1_list_item_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_avatar"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/kr1_list_item_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maksim"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintLeft_toRightOf="@+id/kr1_list_item_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/kr1_list_item_photo"
        app:layout_constraintBottom_toBottomOf="@+id/kr1_list_item_photo"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/kr1_list_item_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golunko"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toRightOf="@+id/kr1_list_item_firstname"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/kr1_list_item_firstname" />

    <TextView
        android:id="@+id/kr1_list_item_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/kr1_list_item_lastname"
        app:layout_constraintLeft_toRightOf="@+id/kr1_list_item_lastname"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>